<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ff090909"
    android:layout_centerInParent="true">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START COUNT"
        android:id="@+id/button"
        android:textSize="25dp"
        android:layout_below="@+id/editHours"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="143dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editHours"
        android:selectAllOnFocus="true"
        android:width="100dp"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:background="#ff040404"
        android:text="00"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="80dp"
        android:numeric="integer"
        android:textColor="#ffff0905"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/editMinutes" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/editHours"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editMinutes"
        android:selectAllOnFocus="true"
        android:width="100dp"
        android:layout_alignTop="@+id/editSeconds"
        android:background="#ff020202"
        android:textAlignment="center"
        android:text="00"
        android:maxLength="2"
        android:textSize="80dp"
        android:singleLine="false"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:focusable="true"
        android:numeric="integer"
        android:textColor="#ffff0905" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editSeconds"
        android:selectAllOnFocus="true"
        android:width="110dp"
        android:layout_alignTop="@+id/editHours"
        android:background="#ff050505"
        android:textSize="80dp"
        android:textAlignment="center"
        android:maxLength="2"
        android:numeric="integer"
        android:textColor="#ffff0905"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editMinutes"
        android:layout_toRightOf="@+id/editMinutes"
        android:text="00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="hours"
        android:id="@+id/textView"
        android:textColor="#ffff0507"
        android:textAlignment="gravity"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_above="@+id/editMinutes"
        android:layout_alignLeft="@+id/editHours"
        android:layout_alignStart="@+id/editHours"
        android:layout_toLeftOf="@+id/editMinutes"
        android:layout_toStartOf="@+id/editMinutes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="seconds"
        android:id="@+id/textView4"
        android:textColor="#ffff0507"
        android:textAlignment="gravity"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_alignRight="@+id/editSeconds"
        android:layout_alignEnd="@+id/editSeconds"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/editMinutes"
        android:layout_toEndOf="@+id/editMinutes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="minutes"
        android:id="@+id/textView5"
        android:textColor="#ffff0507"
        android:textAlignment="gravity"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:layout_alignTop="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time Set : 00 hrs 00 mins 00 secs"
        android:id="@+id/timeSet"
        android:textColor="#ffff0711"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>